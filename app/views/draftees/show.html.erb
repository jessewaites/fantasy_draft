<%- model_class = Draftee -%>
<div class="page-header">
  <h1><%=t '.title', :default => Draftee %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fan_name) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.fan_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:img_url) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.img_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fav_team) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.fav_team %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:why_draft_me) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.why_draft_me %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fav_bose_product) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.fav_bose_product %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fan_score) %></dt>
      <dd><pre class="prettyprint"><%= @draftee.fan_score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              draftees_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_draftee_path(@draftee), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              draftee_path(@draftee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

